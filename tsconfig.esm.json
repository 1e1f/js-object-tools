{
    "include": [
        "src/**/*.ts"
    ],
    "compilerOptions": {
        "outDir": "esm",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "es2015",
        "moduleResolution": "node",
        "target": "es6",
        "lib": [
            "esnext"
        ],
        "preserveConstEnums": true,
        "declaration": false,
        "noEmitOnError": false,
        "downlevelIteration": true
    }
}
