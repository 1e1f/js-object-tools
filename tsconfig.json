{
    "include": [
        "src/**/*.ts"
    ],
    "compilerOptions": {
        "outDir": "lib",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es5",
        "lib": [
            "es2015"
        ],
        "preserveConstEnums": true,
        "declaration": false,
        "noEmitOnError": false
    }
}